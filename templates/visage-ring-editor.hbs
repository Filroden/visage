<div class="visage-config-container">
    <div class="visage-config-wrapper">
        
        <p class="visage-notes">{{localize "VISAGE.RingConfig.Hint"}}</p>

        {{#if showVideoWarning}}
            <div class="visage-warning-box">
                <i class="fas fa-exclamation-triangle"></i>
                <span>{{localize "VISAGE.RingConfig.VideoWarning"}}</span>
            </div>
        {{/if}}

        {{!-- Enable Toggle --}}
        <div class="form-group">
            <label>{{localize "VISAGE.RingConfig.Enabled"}}</label>
            <div class="visage-form-fields">
                <input class="visage-checkbox" type="checkbox" name="enabled" {{checked enabled}}/>
            </div>
        </div>

        {{!-- Subject Fieldset --}}
        <fieldset class="visage-fieldset visage-ring-grid-layout">
            <legend>{{localize "VISAGE.RingConfig.Group.Subject"}}</legend>

            <div class="form-group">
                <label>{{localize "VISAGE.RingConfig.SubjectTexture"}}</label>
                <div class="visage-form-fields">
                    <file-picker type="image" name="subjectTexture" value="{{subject.texture}}" placeholder="{{localize 'VISAGE.RingConfig.Placeholder.Default'}}"></file-picker>
                </div>
            </div>

            <div class="form-group">
                <label>{{localize "VISAGE.RingConfig.SubjectScale"}}</label>
                <div class="visage-form-fields">
                    <range-picker name="subjectScale" value="{{subject.scale}}" min="0.5" max="3.0" step="0.05"></range-picker>
                </div>
            </div>
        </fieldset>

        {{!-- Colors Fieldset --}}
        <fieldset class="visage-fieldset visage-ring-grid-layout">
            <legend>{{localize "VISAGE.RingConfig.Group.Colors"}}</legend>

            <div class="form-group color-group">
                <label>{{localize "VISAGE.RingConfig.RingColor"}}</label>
                <div class="visage-form-fields">
                    <color-picker name="ringColor" value="{{colors.ring}}"></color-picker>
                </div>
            </div>

            <div class="form-group color-group">
                <label>{{localize "VISAGE.RingConfig.BackgroundColor"}}</label>
                <div class="visage-form-fields">
                    <color-picker name="backgroundColor" value="{{colors.background}}"></color-picker>
                </div>
            </div>
        </fieldset>

        {{!-- Effects Fieldset --}}
        <fieldset class="visage-fieldset visage-ring-grid-layout">
            <legend>{{localize "VISAGE.RingConfig.Effects.Label"}}</legend>
            
            <div class="form-group stacked">
                <div class="visage-form-fields">
                    {{#each effects}}
                    <label class="checkbox">
                        <input class="visage-checkbox" type="checkbox" name="effect_{{this.value}}" {{checked this.isActive}}>
                        {{localize this.label}}
                    </label>
                    {{/each}}
                </div>
            </div>
        </fieldset>

    </div>

    <footer class="visage-ring-footer">
        <button type="submit" class="visage-save" data-action="save">
            <i class="fas fa-check"></i> {{localize "VISAGE.RingConfig.Apply"}}
        </button>
    </footer>
</div>